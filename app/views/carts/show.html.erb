<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Корзина</h1>
    <button data-action="click->cart#reset" class="text-gray-500 hover:text-gray-700">
      Очистить корзину
    </button>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <div class="md:col-span-2">
      <% if @cart_items.any? %>
        <div class="space-y-6">
          <% @cart_items.each do |item| %>
            <%= render "cart_item", item: item %>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500">Ваша корзина пуста</p>
      <% end %>
    </div>

    <div class="bg-gray-50 p-6 rounded-lg">
      <h2 class="text-xl font-semibold mb-4">Итого</h2>
      
      <div class="space-y-4">
        <div class="flex justify-between">
          <span>Товары (<%= @cart_items.sum(&:quantity) %>)</span>
          <span><%= number_to_currency(@subtotal, unit: "₽", format: "%n %u") %></span>
        </div>

        <div class="pt-4 border-t border-gray-200">
          <label for="discount-range" class="block text-sm font-medium text-gray-700 mb-2">Скидка</label>
          <input type="range" id="discount-range" name="discount" min="0" max="1000" value="<%= @discount %>" 
                 class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer"
                 data-action="input->cart#updateDiscount">
          <div class="flex justify-between mt-2">
            <span>0 ₽</span>
            <span>1000 ₽</span>
          </div>
          <div class="text-right mt-1">
            <span class="font-medium"><%= number_to_currency(@discount, unit: "₽", format: "%n %u") %></span>
          </div>
        </div>

        <div class="pt-4 border-t border-gray-200 font-semibold flex justify-between">
          <span>Общая сумма</span>
          <span><%= number_to_currency(@total, unit: "₽", format: "%n %u") %></span>
        </div>

        <button class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 px-4 rounded-lg font-medium transition-colors">
          Оформить заказ
        </button>
      </div>
    </div>
  </div>
</div>
