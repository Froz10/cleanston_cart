<div class="flex items-start border-b border-gray-200 pb-6" data-controller="item" data-item-id-value="<%= item.id %>">
  <div class="flex-shrink-0 w-24 h-24 bg-gray-200 rounded-md overflow-hidden">
    <% if item.product.image_url.present? %>
      <img src="<%= item.product.image_url %>" alt="<%= item.product.name %>" class="w-full h-full object-cover">
    <% else %>
      <div class="w-full h-full flex items-center justify-center text-gray-400">
        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </div>
    <% end %>
  </div>

  <div class="ml-4 flex-1">
    <div class="flex justify-between">
      <div>
        <h3 class="text-lg font-medium"><%= item.product.name %></h3>
        <p class="text-gray-500 mt-1"><%= number_to_currency(item.product.price, unit: "₽", format: "%n %u") %></p>
      </div>
      <button data-action="click->item#remove" class="text-gray-400 hover:text-gray-600">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
      </button>
    </div>

    <div class="mt-4 flex items-center">
      <div class="flex items-center border border-gray-300 rounded-md">
        <button data-action="click->item#decrease" class="px-3 py-1 text-gray-600 hover:bg-gray-100">
          -
        </button>
        <span data-item-target="quantity" class="px-3 py-1"><%= item.quantity %></span>
        <button data-action="click->item#increase" class="px-3 py-1 text-gray-600 hover:bg-gray-100">
          +
        </button>
      </div>
      <div class="ml-auto font-medium">
        <%= number_to_currency(item.product.price * item.quantity, unit: "₽", format: "%n %u") %>
      </div>
    </div>
  </div>
</div>
